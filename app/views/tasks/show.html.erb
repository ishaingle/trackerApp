<div class="container">
	<div class="row">
		<div class="col-md-6 mx-md-auto">
			<div class="card rounded-0 mt-5 mb-5">
				<div class="card-header shadow">
				<p>
				  <strong>Title:</strong>
				  <%= @task.title %>
				</p>
				<p>
				  <strong>Start Time:</strong>
				  <%= @task.start_time %>
				</p>
				<p>
				  <strong>End Time:</strong>
				  <%= @task.end_time %>
				</p>
				<p>
				  <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary" %> |
				  <%= link_to "Destroy", @task, class: "btn btn-primary", :confirm => 'Are you sure?', :method => :delete %> |
				  <%= link_to "View All", tasks_path, class: "btn btn-primary" %>
				</p>
				</div>
			</div>
		</div>
	</div>
</div>