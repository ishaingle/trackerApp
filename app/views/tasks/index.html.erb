<div class="container">
  <div class="row">
    <div class="col-md-8 mx-md-auto">
      <div class="card rounded-0 mt-5 mb-5">
        <div class="card-header shadow">
          <h1>Listing Tasks</h1><br>
        </div>
        <table class="table table-dark", style="text-align:center">
        <tr>
          <th>Title</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th></th>
          <th>Actions</th>
        </tr>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.start_time %></td>
            <td><%= task.end_time %></td>
            <td><%= link_to "Show", task, class: "btn btn-light btn-sm" %></td>
            <td><%= link_to "Edit", edit_task_path(task), class: "btn btn-light btn-sm" %></td>
            <td><%= link_to "Destroy", task, class: "btn btn-light btn-sm", :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>
      </table>
      <p><%= link_to "New Task", new_task_path, class: "btn btn-dark" %></p>
      </div>
    </div>
  </div>
</div>