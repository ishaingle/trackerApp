<div class="container">
	<div class="row">
		<div class="col-md-6 mx-md-auto">
			<div class="card rounded-0 mt-5 mb-5">
				<div class="card-header shadow">
				<p>
				  <strong>Date:</strong>
				  <%= @daily_status.date %>
				</p>
				<p>
				  <strong>Start Time:</strong>
				  <%= @daily_status.start_time %>
				</p>
				<p>
				  <strong>End Time:</strong>
				  <%= @daily_status.end_time %>
				</p>
				<p>
				  <%= link_to "Edit", edit_daily_status_path(@daily_status), class: "btn btn-primary" %> |
				  <%= link_to "Destroy", @daily_status, class: "btn btn-primary", :confirm => 'Are you sure?', :method => :delete %> |
				  <%= link_to "View All", daily_statuses_path, class: "btn btn-primary" %>
				</p>
			</div>
		</div>
	</div>
</div>